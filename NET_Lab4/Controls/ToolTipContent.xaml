<UserControl x:Class="NET_Lab4.Controls.ToolTipContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NET_Lab4.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <StackPanel>
        <TextBlock Text="{Binding Header}" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
        <TextBlock Text="{Binding Description}"/>
        <Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
        <WrapPanel>
            <Image Source="../Images/help.png" Margin="0,0,5,0" Width="16" Height="16"/>
            <TextBlock FontStyle="Italic">Wciśnij F1 po więcej informacji</TextBlock>
        </WrapPanel>
    </StackPanel>
</UserControl>
